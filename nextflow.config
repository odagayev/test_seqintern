params {
    reads = 'data/reads/*.fastq.gz'
    genome = 'data/genome/genome.fa'
    gtf = 'data/genome/annotations.gtf'
}

process {
    withName: fastqc {
        container = 'biocontainers/fastqc:v0.11.9_cv7'
    }
    withName: trim {
        container = 'biocontainers/trimmomatic:v0.39.0_cv7'
    }
    withName: align {
        container = 'biocontainers/hisat2:v2.2.1_cv7'
    }
    withName: quantify {
        container = 'biocontainers/subread:v2.0.1_cv7'
    }
}
